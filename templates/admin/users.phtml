<script>
document.addEventListener('DOMContentLoaded', () => {
    // Lógica para os menus de ação
    document.querySelectorAll('.action-menu-button').forEach(button => {
        button.addEventListener('click', (e) => {
            e.stopPropagation();
            // Fecha todos os outros menus
            document.querySelectorAll('.action-menu').forEach(m => {
                if (m !== button.nextElementSibling) m.classList.add('hidden');
            });
            button.nextElementSibling.classList.toggle('hidden');
        });
    });
    // Fecha os menus se clicar fora
    window.addEventListener('click', () => {
        document.querySelectorAll('.action-menu').forEach(menu => menu.classList.add('hidden'));
    });

    // Lógica para o modal de confirmação
    const modal = document.getElementById('action-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalText = document.getElementById('modal-text');
    const modalUserId = document.getElementById('modal-user-id');
    const modalNewStatus = document.getElementById('modal-new-status');
    const modalConfirmBtn = document.getElementById('modal-confirm-button');
    const modalCancelBtn = document.getElementById('modal-cancel-button');

    const actions = {
        active: { title: 'Ativar Utilizador', text: 'Tem a certeza que deseja reativar a conta de', btnClass: 'bg-green-600 hover:bg-green-700 text-white' },
        suspended: { title: 'Suspender Utilizador', text: 'Tem a certeza que deseja suspender a conta de', btnClass: 'bg-orange-500 hover:bg-orange-600 text-white' },
        banned: { title: 'Banir Utilizador', text: 'Tem a certeza que deseja banir a conta de', btnClass: 'bg-red-600 hover:bg-red-700 text-white' },
        deleted: { title: 'Apagar Utilizador', text: 'Esta ação é IRREVERSÍVEL. Tem a certeza que deseja apagar permanentemente a conta de', btnClass: 'bg-red-800 hover:bg-red-900 text-white' },
    };

    document.querySelectorAll('.action-button').forEach(button => {
        button.addEventListener('click', (e) => {
            const action = e.target.dataset.action;
            const userId = e.target.dataset.userid;
            const userName = e.target.dataset.username;
            const config = actions[action];

            modalTitle.textContent = config.title;
            modalText.innerHTML = `${config.text} <strong>${userName}</strong>?`;
            modalUserId.value = userId;
            modalNewStatus.value = action;
            modalConfirmBtn.className = `font-bold py-2 px-4 rounded-lg ${config.btnClass}`;
            
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        });
    });

    modalCancelBtn.addEventListener('click', () => {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    });
});
</script>
