<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const ctx = document.getElementById('userRegistrationsChart').getContext('2d');
    
    // Obter dados do PHP
    const labels = <?php echo json_encode($stats['chart_labels'] ?? []); ?>;
    const dataPoints = <?php echo json_encode($stats['chart_data'] ?? []); ?>;

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Novos Utilizadores',
                data: dataPoints,
                backgroundColor: 'rgba(129, 140, 248, 0.2)', // Cor de fundo roxa clara
                borderColor: 'rgba(107, 114, 245, 1)', // Cor da linha roxa
                borderWidth: 3,
                tension: 0.4, // Curva suave
                fill: true,
                pointBackgroundColor: 'rgba(107, 114, 245, 1)',
                pointBorderColor: '#fff',
                pointHoverRadius: 7
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        // Garante que os ticks do eixo Y sejam apenas números inteiros
                        callback: function(value) {if (Math.floor(value) === value) {return value;}}
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: '#333',
                    titleFont: { size: 14 },
                    bodyFont: { size: 12 },
                    padding: 10,
                    cornerRadius: 4
                }
            }
        }
    });
});
</script>
